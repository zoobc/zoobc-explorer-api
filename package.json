{
  "name": "zoobc-explorer-api",
  "version": "0.0.1",
  "description": "A service for searching and displaying data published by the explorer server web API",
  "repository": "git@github.com:zoobc/zoobc-explorer-api.git",
  "author": "ZooBC Explorer API Team",
  "license": "Apache",
  "private": true,
  "bin": "app.js",
  "main": "app.js",
  "keywords": [
    "blockchainzoo",
    "zoobc",
    "explorer",
    "blockchain"
  ],
  "scripts": {
    "start": "nodemon app.js",
    "zoobc": "node app.js",
    "pkg-win": "rm -f explorer-api && pkg -t node10-win-x64 --output explorer-api.exe .",
    "pkg-mac": "rm -f explorer-api && pkg -t node10-macos-x64 --output explorer-api .",
    "pkg-linux": "rm -f explorer-api && pkg -t node10-linux-x64 --output explorer-api ."
  },
  "pkg": {
    "assets": [
      "zoobc-schema/model/*.proto",
      "zoobc-schema/service/*.proto",
      "zoobc-explorer-ui/build/**/*"
    ]
  },
  "dependencies": {
    "apollo-server": "^2.9.3",
    "apollo-server-express": "^2.9.3",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^1.7.1",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-session": "^1.16.2",
    "graphql": "^14.5.4",
    "graphql-resolvers": "^0.3.3",
    "graphql-tools": "^4.0.5",
    "grpc-pack": "^0.1.2",
    "helmet": "^3.21.0",
    "iplocation": "^6.1.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "mongoose": "^5.7.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "nconf": "^0.10.0",
    "redis": "^2.8.0",
    "saslprep": "^1.0.3",
    "swagger-jsdoc": "^3.4.0",
    "swagger-ui-express": "^4.0.7"
  },
  "devDependencies": {
    "dotenv": "^8.1.0",
    "nodemon": "^1.19.1"
  }
}
